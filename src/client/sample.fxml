<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller">
   <children>
      <HBox>
         <children>
            <TextField fx:id="textFieldLogin" HBox.hgrow="ALWAYS" />
            <TextField fx:id="textFieldPass" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConnect" minWidth="100.0" mnemonicParsing="false" onAction="#connect" text="Connect" />
         </children>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TextArea fx:id="textAreaChat" editable="false" prefWidth="200.0" visible="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TreeView fx:id="treeViewUsers" minWidth="100.0" prefWidth="100.0" visible="false" VBox.vgrow="ALWAYS" />
                        <Button fx:id="btnBlock" minWidth="100.0" mnemonicParsing="false" onAction="#block" prefWidth="100.0" text="Un/Block" visible="false" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox>
         <children>
            <TextField fx:id="textFieldNick" minWidth="100.0" onAction="#setNick" prefWidth="100.0" visible="false" />
            <TextField fx:id="textFieldMessage" onAction="#sendMsg" visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSend" minWidth="100.0" mnemonicParsing="false" onAction="#sendMsg" text="Send" visible="false" />
         </children>
      </HBox>
   </children>
</VBox>
